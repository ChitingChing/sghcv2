<?import org.controlsfx.control.textfield.CustomTextField?>

<FlowPane alignment="TOP_CENTER" prefHeight="233.0" prefWidth="400.0" vgap="20.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.ultimatesoftware.controllers.ConnectionParametersController">
   <children>
      <Label alignment="CENTER" text="Parámetros de Conexión">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" prefHeight="130.0" prefWidth="238.0" spacing="10.0">
         <children>
            <CustomTextField fx:id="txtUrl" promptText="Url" />
            <CustomTextField fx:id="txtUserDatabase" promptText="User" />
            <CustomPasswordField fx:id="txtPasswordDatabase" />
            <Button fx:id="btnSave" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#saveData" prefHeight="25.0" prefWidth="205.0" text="Guardar">
               <graphic>
                  <FontAwesomeIconView glyphName="SAVE" />
               </graphic>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin>
      </VBox>
      <NotificationPane fx:id="ctrNotificationPane" />
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</FlowPane>
